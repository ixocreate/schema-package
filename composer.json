{
    "name": "ixocreate/schema-package",
    "description": "IXOCREATE Schema Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "beberlei/assert": "^3.2",
        "doctrine/dbal": "^2.6",
        "doctrine/instantiator": "^1.2",
        "ixocreate/application": "^0.3.0",
        "ixocreate/quill-renderer": "^0.2.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^3.0",
        "ixocreate/test": "^0.2"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Schema\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Schema\\": "tests/misc/",
            "Ixocreate\\Test\\Schema\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php-cs-fixer.php"
    }
}
